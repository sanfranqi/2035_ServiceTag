                            {{/each}}
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="form-group has-error">
                        <textarea class="form-control form-control-textarea form-control-textarea-h5" rows="5" name="content"></textarea>
